{
  "extends": "./configs/tsconfig.base.json",
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "types": ["node", "jest"],
    "paths": {
      "solid-devtools": ["./packages/main/src/index.ts"],
      // "@solid-devtools/shared/*": ["./packages/shared/src/*"],
      "@solid-devtools/debugger": ["./packages/debugger/src/index.ts"],
      "@solid-devtools/logger": ["./packages/logger/src/index.ts"],
      "@solid-devtools/locator": ["./packages/locator/src/index.tsx"],
      "@solid-devtools/extension-adapter": ["./packages/extension-adapter/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "**/dist/**/*"]
}
