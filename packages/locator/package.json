{
	"name": "@solid-devtools/locator",
	"version": "0.7.1",
	"description": "On-page overlay for localisating SolidJS components, and revealing them in your code editor.",
	"license": "MIT",
	"author": "Damian Tarnawski <gthetarnav@gmail.com>",
	"contributors": [],
	"homepage": "https://github.com/thetarnav/solid-devtools#readme",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/thetarnav/solid-devtools.git"
	},
	"bugs": {
		"url": "https://github.com/thetarnav/solid-devtools/issues"
	},
	"keywords": [
		"solid",
		"devtools",
		"components",
		"locator",
		"vscode"
	],
	"private": false,
	"sideEffects": false,
	"type": "module",
	"files": [
		"dist"
	],
	"main": "./dist/server.cjs",
	"module": "./dist/server.js",
	"types": "./dist/index.d.ts",
	"exports": {
		"browser": {
			"development": {
				"import": "./dist/index.js",
				"require": "./dist/index.cjs"
			},
			"import": "./dist/server.js",
			"require": "./dist/server.cjs"
		},
		"import": "./dist/server.js",
		"require": "./dist/server.cjs"
	},
	"scripts": {
		"dev": "tsup --watch",
		"build": "tsup",
		"test": "jest --config jest.config.ts",
		"typecheck": "tsc --noEmit"
	},
	"devDependencies": {
		"@testing-library/jest-dom": "^5.16.4",
		"esbuild": "^0.14.48",
		"esbuild-plugin-solid": "^0.4.2",
		"jest": "^28.1.2",
		"jest-environment-jsdom": "^28.1.2",
		"solid-js": "^1.4.7",
		"ts-node": "^10.8.2",
		"tsup": "^6.1.3",
		"typescript": "^4.7.4"
	},
	"dependencies": {
		"@solid-devtools/debugger": "^0.2.1",
		"@solid-devtools/ui": "0.3.1",
		"@solid-primitives/bounds": "^0.0.100",
		"@solid-primitives/event-listener": "^2.2.0",
		"@solid-primitives/keyboard": "^0.0.100",
		"@solid-primitives/platform": "^0.0.100",
		"@solid-primitives/utils": "^2.1.1",
		"motion": "^10.11.2"
	},
	"peerDependencies": {
		"solid-js": "^1.4.4"
	},
	"optionalDependencies": {
		"@solid-devtools/babel-plugin": "^0.2.0"
	},
	"packageManager": "pnpm@7.3.0"
}
